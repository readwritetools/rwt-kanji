!option --fragment

div #kanji-card {
	div.triangle
	h3 <<slot *name=main-title>> 
	aside {
		h4 <<slot *name=side-title>>		
	}
	section {
		blockquote {
			p #slogan <<q<<slot *name=slogan>>>>
		}
		div#image-block {
			p #image-text <<slot *name=image-text>>
			slot *name=image
		}
	}
}
		